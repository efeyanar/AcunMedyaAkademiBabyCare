@model List<Team>
@{
    ViewData["Title"] = "TeamList";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
}


<div class="card-header">
    <div class="card-title">Ekibimiz</div>
</div>
<div class="card-body">
    <div class="card-sub">
        Ekibimizle ilgili işlemleri buradan yapabilirsiniz


    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">İsim - Soyisim</th>
                <th scope="col">Yaş</th>
                <th scope="col">Şehir</th>
                <th scope="col">Resim</th>
                <th scope="col">Branş</th>
                <th scope="col">Sil</th>
                <th scope="col">Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BranchId</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Age</td>
                    <td>@item.City</td>
                    <td><img src="@item.ImageUrl" style="height:75px; width:75px" /></td>
                    <td>@item.Branch.BranchName</td>
                    <td><a onclick="deleteTeam(@item.TeamId)" class="btn btn-warning">Sil</a></td>
                    <td><a href="/Admin/Team/UpdateTeam/@item.TeamId" class="btn btn-success">Güncelle</a></td>
                </tr>
            }



        </tbody>
    </table>
    <a href="/Admin/Team/CreateTeam/" class="btn btn-primary">Yeni Takım Girişi</a>

    <script>
        function deleteTeam(id) {
            Swal.fire({
                title: "Silmek istediğine emin misiniz?",
                text: "Bu işlemi geri alamazsınız!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Evet, Sil!",
                cancelButtonText:"İptal"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Team/DeleteTeam/" + id;
                }
            });

        }
    </script>
