@model Team
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Areas/Admin/Views/AdminDefault/Index.cshtml";
}

<h1>Çalışan Güncelleme</h1>
<form method="post">
    <input type="hidden" asp-for="TeamId" class="form-control" />
    <br />
    <label>Adı-Soyadı</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <br />
    <label>Yaş</label>
    <input type="text" asp-for="Age" class="form-control" />
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Resim Yolu</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Branş</label>
    <select asp-for="BranchId" asp-items="@ViewBag.v" class="form-control">
        <option>Branş Seçiniz</option>
    </select>
    <br />
    <button class="btn btn-primary">Kaydet</button>
  
</form>